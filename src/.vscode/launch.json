{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Debug",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build (Debug)",
            "program": "${workspaceFolder}/../bin/sort_d",
            "args": ["--input:${workspaceFolder}/../bin/scene.sort"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../bin",
            "environment": [],
            "externalConsole": true,
            "osx":{
                "MIMode": "lldb"
            },
            "linux":{
                "MIMode":"gdb"
            },
            "windows":{
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/../bin/sort_d.exe"
            }
        },
        {
            "name": "Run Release with Debug Info",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build (Release with Debug Info)",
